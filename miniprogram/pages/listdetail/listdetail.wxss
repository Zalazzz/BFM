/* pages/listdetail/listdetail.wxss */
.listdetail{
  padding: 10rpx;
  font-size: 32rpx;
}
.listdetail .bgImg{
  width: 100%;
  height: 400rpx;
  position: relative;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.listdetail .bgImg .bgText{
  position: absolute;
  top: 40%;
  left: 35%;
  color: #fff;
  font-size: 50rpx;
}

.listdetail .topTitle{
  height: 50rpx;
  padding: 35rpx 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 50rpx;

}

.listdetail .topTitle .leftTile .total{
  color: #bbb;
}

.listdetail .topTitle .rightTile{
  height: 50rpx;
  padding: 5rpx 35rpx;
  margin-right: 30rpx;
  background-color: #d33a33;
  border-radius: 50rpx;
  line-height: 50rpx;
}

.listdetail .earchmovie{
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #eee;
}

.listdetail .earchmovie .ranking{
  width: 70rpx;
  background-color: lightgray;
  padding: 5rpx 30rpx;
  border-radius: 20rpx;
}

.listdetail .earchmovie .mycontainer{
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0rpx;
}

.listdetail .earchmovie .mycontainer .middle{
  width: 50%;
  border-right: 1rpx dotted #ccc;
  font-size: 30rpx;
  padding: 0rpx 10rpx;
}
.listdetail .earchmovie .mycontainer .middle .Score{
  float: left;
  margin: -37rpx 180rpx;
}

.listdetail .earchmovie .mycontainer .middleTitle{
  font-size: 32rpx;
  font-weight: bolder;
  padding: 20rpx 0rpx;
}

.listdetail .earchmovie .mycontainer .sort{
  padding: 20rpx 0rpx;
}

.listdetail .earchmovie .mycontainer .right{
  padding: 20rpx;
  margin-top: 60rpx;
}

.listdetail .earchmovie .comment{
  width: 95%;
  height: 40rpx;
  background-color: #eee;
  padding: 30rpx 20rpx;
  border-radius:20rpx;
  margin-top: 20rpx;
  color: #ccc;
}





