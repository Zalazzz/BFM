/* pages/profile/profile.wxss */
/* 1: 最外层父元素 */
.profile {
  background: #d33a33;
  height: 400rpx;
  text-align: center;/* 子元素居中 */
  position: relative;/* 父元素相对定位 */
  width: 100%;
}
.profile-name{
  margin: 0 auto;
  margin-top: 20rpx;
}
/* 2: 头像元素 */
.profile-img {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 50%;/* 圆角50% */
  overflow: hidden;/* 超出范围隐藏 */
  left: 50%;
  top: 10%;
  transform: translate(-50%,60rpx);
}