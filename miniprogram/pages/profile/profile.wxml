<!--pages/profile/profile.wxml-->
<view class="profile">
  <view class="profile-img">
    <!-- 获取当前用户的头像 -->
    <!-- open-data 组件 类型 -->
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="profile-name">
    <open-data type="userNickName"></open-data>
  </view>
</view>
<view bindtap="gotomy">
  <van-button size="large" open-type="getUserInfo" bindgetuserinfo="getUser" >获取用户信息</van-button>
</view>