/* pages/index/index.wxss */
.index{
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #eeeeee;
}
.index .searchImg{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 1.8%;
  left: 38%;

}
.index .search{
  width: 100%;
  text-align: center;
  background-color: #d33a33;
  padding:3% 4%;
}
.index .search .searchInput{
  width: 90%;
  padding: 1%;
  border-radius: 50rpx;
  background-color: #ffffff;
  font-size: 36rpx;
}
.index .hotFiles{
  padding: 20rpx 10rpx;
  background-color: #ffffff;
}

.index .hotFiles .title{
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}


.index .hotFiles .title .titleRight .titleRightMore{
  margin-right: 10rpx;
  color: #d33a33;
  line-height: 32rpx;
}

.index .hotFiles .title .titleRight .titleRightArrow{
  height:32rpx;
  width:32rpx;
}

.index .hotFiles .showMoreMsg{
  height: 430rpx;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx  #666666;
}

.index .hotFiles .showMoreMsg .earchFile{
  width: 30% !important;
  height: 100% !important;
  border-radius: 10rpx;
  padding-left: 5rpx;
  padding-right: 20rpx;
}


.index .hotFiles .showMoreMsg .earchFile .img{
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
}

.index .hotFiles .showMoreMsg .earchFile .title{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 25rpx;
}
.index .hotFiles .showMoreMsg .earchFile .filesScore{
  float: right;
  margin-top: -40rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: #bbb;
}



























